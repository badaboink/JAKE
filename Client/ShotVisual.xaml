<UserControl x:Class="JAKE.client.ShotVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JAKE.client"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid>
        <Ellipse x:Name="shotCircle" Width="{Binding EllipseSize, RelativeSource={RelativeSource AncestorType={x:Type local:ShotVisual}}}" Height="{Binding EllipseSize, RelativeSource={RelativeSource AncestorType={x:Type local:ShotVisual}}}"/>
    </Grid>
</UserControl>
